@model IEnumerable<Candidate>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (Model != null && Model.Any())
{
    <h6 class="display-6">Applications(@Model.Count())</h6>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
				<th>FullName</th>
                <th>ApplyAt</th>
                <th>.SelectedCourse</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (var candidate in Model)
                {
                    <tr>
                   <th>@candidate.Email</th>
                   <th>@candidate.FullName</th>
                   <th>@candidate.ApplyAt</th>
					<th>@candidate.SelectedCourse</th>
				</tr>
                }
           
        </tbody>
    </table>
    // Modelde öğeler varsa burada işlem yapabilirsiniz
   // <ul>
     /*   @foreach (var candidate in Model)
            {
                <li>@candidate.FullName @candidate.SelectedCourse</li>
            }
    </ul>*/
    
}
else
{
    <div class="alert alert-info">
        There is no application.Please click here to apply
        <a class="alert-link" asp-action="Apply">apply</a>
    </div>
}

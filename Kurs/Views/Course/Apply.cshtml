@model Candidate
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="display-6">
    Apply
</div>
<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
    </div>
    
   <div>
       <fieldset>
         <legend>Select One Course</legend>
         <p>
             <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked />
             <label>ASP.NET Core MVC</label>
         </p>
         <p>
             <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API" />
             <label>ASP.NET Core API</label>
          </p>
          <p>
             <input id="api" type="radio" asp-for="SelectedCourse" value="Blazor" />
             <label>Blazor</label>
          </p>
       </fieldset>
   </div>
    <div class="my-2">
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>